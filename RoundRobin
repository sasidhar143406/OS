#include<stdio.h>
int main()
{
  int burst[30],ct[30],wt[30],prs[30],n,i,j,t,rt[30],p=0,tt,r=0;
  float awt=0;
  printf("enter the number of process\n");
  scanf("%d",&n);
  printf("enter the process\n");
  for(i=0;i<n;i++)
  {
    scanf("%d",&prs[i]);
  } 
   printf("enter the burst times\n");
  for(i=0;i<n;i++)
  {
    scanf("%d",&burst[i]);
  }
  printf("enter Time Quantum\n");
  scanf("%d",&t);
  for(i=0;i<n;i++)
  {
  rt[i]=burst[i];
  tt+=burst[i];
  }
  ct[0]=0;
  while(r<tt){
  for(i=0;i<n;i++)
  {
  if(burst[i]!=0)
  {
    if(burst[i]>=t)
    {
      burst[i]=burst[i]-t;
      ct[i]=ct[p]+t;
      p=i;
      r+=t;
    }
    else
    {
       ct[i]=ct[p]+burst[i];
       p=i;
       r+=burst[i]; 
       burst[i]=0;  
     }
   }
  }
  } 
 for(i=0;i<n;i++)
   {
      wt[i]=ct[i]-rt[i];
       awt+=wt[i];
    }
     awt=awt/n;
     printf("average waiting time  is: %f",awt);          
   return 0;
 } 

#include<stdio.h>
int main()
{
  int burst[30],at[30],tat[30],ct[30],wt[30],prs[30],n,i,j;
  float awt=0;
  printf("enter the number of process\n");
  scanf("%d",&n);
  printf("enter the process\n");
  for(i=0;i<n;i++)
  {
    scanf("%d",&prs[i]);
  } 
  printf("enter the Arrival times\n");
  for(i=0;i<n;i++)
  {
    scanf("%d",&at[i]);
  }
   printf("enter the burst times\n");
  for(i=0;i<n;i++)
  {
    scanf("%d",&burst[i]);
  }
  for(i=0;i<n-1;i++)
  {
     for(j=0;j<n-i-1;j++)
     {
       int temp=at[j];
       at[j]=at[j+1];
       at[j+1]=temp;
       
       temp=prs[j];
       prs[j]=prs[j+1];
       prs[j+1]=temp;
     }
  }
  ct[0]=burst[0];
  for(i=1;i<n;i++)
  {
    ct[i]=ct[i-1]+burst[i];
  }
  for(i=0;i<n;i++)
  {  
     tat[i]=ct[i]-at[i];
     
   }
   for(i=0;i<n;i++)
   {
      wt[i]=tat[i]-burst[i];
      }
   
    for(i=0;i<n;i++)
    {
       awt+=wt[i];
     }
     awt=awt/n;
     printf("average waiting time  is: %f",awt); 
            
   return 0;
 }   
